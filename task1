import random
words = ["apple", "banana", "grape", "mango", "orange"]
word = random.choice(words)
word_length = len(word)
guessed_letters = ["_"] * word_length
wrong = 0
max_wrong = 6
print("Welcome to Hangman Game")
print("You have 6 chances\n")
while wrong < max_wrong and "_" in guessed_letters:
    print("Word:", " ".join(guessed_letters))
    guess = input("Enter a letter: ")
    found = False
    for i in range(word_length):
        if word[i] == guess and guessed_letters[i] == "_":
            guessed_letters[i] = guess
            found = True
    if found == False:
        wrong = wrong + 1
        print("Wrong guess")
        print("Remaining chances:", max_wrong - wrong)
    print()
if "_" not in guessed_letters:
    print("Congratulations! You guessed the word:", word)
else:
    print("Game Over! The word was:", word)